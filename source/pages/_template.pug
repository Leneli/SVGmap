doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport", content="initial-scale=1.0, width=device-width")
        title
            block title

    body

        .page

            header.header
                a.logo(href='#main-map') SVG World Map

            main.main#main-map
            
                #zoom.zoom
                    input#pls(type='button', value=' + ')
                    input#min(type='button', value=' - ')
                    div
                        input#top(type='button', value='↑')
                        div
                            input#left(type='button', value='←')
                            input#right(type='button', value='→')
                        input#bottom(type='button', value='↓')

                // SVG
                block main
                
